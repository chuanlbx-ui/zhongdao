{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zhongdao Environment Schema",
  "type": "object",
  "required": [
    "NODE_ENV",
    "PORT",
    "DATABASE_URL",
    "JWT_SECRET",
    "REDIS_URL",
    "LOG_LEVEL",
    "CORS_ORIGIN"
  ],
  "properties": {
    "NODE_ENV": {
      "type": "string",
      "enum": ["development", "staging", "production"]
    },
    "PORT": {
      "type": "string",
      "pattern": "^[0-9]{2,5}$"
    },
    "DATABASE_URL": {
      "type": "string",
      "minLength": 10
    },
    "JWT_SECRET": {
      "type": "string",
      "minLength": 16
    },
    "REDIS_URL": {
      "type": "string",
      "minLength": 10
    },
    "LOG_LEVEL": {
      "type": "string",
      "enum": ["debug", "info", "warn", "error"]
    },
    "CORS_ORIGIN": {
      "type": "string",
      "minLength": 1
    }
  }
}
